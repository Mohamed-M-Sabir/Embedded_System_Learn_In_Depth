#include<stdio.h>

int main(){

	int num;

	printf("Enter the number you want to check: ");
	fflush(stdout);
	scanf("%d",&num);
	ffluch(stdin);

	if(num%2==0){
	   printf("%d is even");
	}
	else if (num%2!=0){
      printf(%d is odd);
	}
   return 0;
}
