#include<stdio.h>

int main(){

	char chr;

	printf("Enter an alphapet: ");
	fflush(stdout);
	scanf("%c",&chr);
	fflush(stdin);

	if(chr=='i'||chr=='o'||chr=='e'||chr=='u'||chr=='a'||chr=='I'||chr=='O'||chr=='E'||chr=='U'||chr=='A')
		printf("%c is vowel",chr);

	else
		printf("%c is constant",chr);


	return 0;
}
