#include <stdio.h>
#include <stdlib.h>


int fact(int num);

int main(void) {
	puts("!!!Hello World!!!"); /* prints !!!Hello World!!! */
	return EXIT_SUCCESS;
}



int fact(int num)
{

	while (num!=0)
	{
		return(num*fact(num-1));

	}


}
