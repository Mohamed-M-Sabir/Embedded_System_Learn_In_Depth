#include<stdio.h>

int main(){

	char ch;

	printf("Please Enter an alphabet: ");
	fflush(stdout);
	scanf("%c",&ch);
	fflush(stdin);

	if(ch=='i'||ch=='o'||ch=='e'||ch=='a'||ch=='u'||ch=='I'||ch=='O'||ch=='E'||ch=='A'||ch=='U'){
		printf("%c is vowel",ch);
	}
	else{
		printf("%c is constant",ch);
	}

	return 0;
}
