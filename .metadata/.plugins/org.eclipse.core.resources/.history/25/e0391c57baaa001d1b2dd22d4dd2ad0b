#include<stdio.h>

int main(){

	char character;

	printf("Enter the character you want to check: ");
	fflush(stdout);
	scanf("%c",&character);
	fflush(stdin);

	if(character=='i'||'o'||'e'||'a'||'u'){
		printf("%c is vowel",character);
	}
	else{
		printf("%c is constant",character);
	}

	return 0;
}
