#include <stdio.h>
#include <stdlib.h>

double square_root(double number);

int main(void) {

	double number;
	printf("Please enter a number: ");
	fflush(stdout);
	scanf("%lf",&number);

	printf("the square root is : %lf",square_root(number));
	return 0;
}

double square_root(double number)
{
	int flag=1,remainder=0;
	double result=number;
    double total;

    for(int i=1 ; i<=number ; i++)
    {
    	if(i*i==number)
    	{
    		return i;
    	}

    }
   return -1;
}
