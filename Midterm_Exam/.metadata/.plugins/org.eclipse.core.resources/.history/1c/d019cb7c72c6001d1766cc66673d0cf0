#include <stdio.h>
#include <stdlib.h>

int sum_numbers();

int main(void) {

	printf("the sum of numbers is : %d",sum_numbers());
	fflush(stdout);
	return 0;
}



int sum_numbers()
{
	int sum=0,count=0;

	if(count<=100)
	{
		count++;
		return sum=count+sum_numbers();

	}
	else
		return 0;

}
