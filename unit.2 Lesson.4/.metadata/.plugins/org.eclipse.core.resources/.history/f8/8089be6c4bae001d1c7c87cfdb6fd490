//This program asks user to enter a string and a character and this program checks how many times that character is repeated in the string entered by user.
#include <stdio.h>
#include <stdlib.h>

int main(void) {

	char st[100];
	printf("Please enter string");
	gets(st);
	printf("%s",st);
	return 0;
}
